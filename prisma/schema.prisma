// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tipo {
  c
  d
}

model clientes {
  id          Int          @id @default(autoincrement())
  nome        String
  limite      Int
  transaction transacoes[]
  saldos      saldos?
}

model transacoes {
  id           String   @id @default(uuid())
  valor        Int
  tipo         Tipo
  descricao    String
  realizada_em DateTime @default(now())

  client    clientes @relation(fields: [client_id], references: [id])
  client_id Int
}

model saldos {
  id    Int @id @default(autoincrement())
  valor Int

  client     clientes @relation(fields: [cliente_id], references: [id])
  cliente_id Int      @unique
}
