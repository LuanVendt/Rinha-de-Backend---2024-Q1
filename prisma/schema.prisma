generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model clientes {
  id          Int          @id @default(autoincrement())
  nome        String
  limite      Int
  saldos      saldos?
  transaction transacoes[]
}

model transacoes {
  id           String   @id @default(uuid())
  valor        Int
  tipo         Tipo
  descricao    String
  realizada_em DateTime @default(now())
  client_id    Int
  client       clientes @relation(fields: [client_id], references: [id])
}

model saldos {
  id         Int      @id @default(autoincrement())
  valor      Int
  cliente_id Int      @unique
  client     clientes @relation(fields: [cliente_id], references: [id])
}

enum Tipo {
  c
  d
}
