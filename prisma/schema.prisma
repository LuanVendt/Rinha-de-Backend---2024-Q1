generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tipo {
  c
  d
}

model client {
  id          String        @id @default(uuid())
  nome        String
  limite      Int
  saldo       Int?          @default(0)
  transaction transaction[]
}

model transaction {
  id        String   @id @default(uuid())
  valor     Int
  tipo      Tipo
  descricao String
  date      DateTime @default(now())

  client    client @relation(fields: [client_id], references: [id])
  client_id String
}
